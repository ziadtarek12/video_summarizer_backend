# LLM Provider Configuration
# Choose provider: "google" or "openrouter"
LLM_PROVIDER=google

# Google AI Studio (Gemini) - get key from https://aistudio.google.com/
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-1.5-flash

# OpenRouter - get key from https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=meta-llama/llama-3.1-70b-instruct:free

# LLM Settings
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.7

# Whisper Configuration
WHISPER_MODEL=large-v3
WHISPER_LANGUAGE=ar
WHISPER_DEVICE=auto

# Output Configuration
OUTPUT_DIR=./output
DEFAULT_NUM_CLIPS=5

# Proxy Configuration (Optional)
# Use if YouTube blocks the server IP. Format: http://user:pass@host:port
YOUTUBE_PROXY=
